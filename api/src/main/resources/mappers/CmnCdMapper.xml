<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.enjoy.api.mapper.CmnCdMapper">

    <select id="findAll" resultType="com.enjoy.common.domain.CmnCd">
        SELECT *
        FROM CMN_CD
    </select>
    <select id="findByCode" parameterType="string" resultType="com.enjoy.common.domain.CmnCd">
        SELECT *
        FROM CMN_CD
        WHERE CODE = #{code}
    </select>
    <select id="findByGroupCode" resultType="com.enjoy.common.domain.CmnCd">
        SELECT
            CODE,
            GROUP_CODE,
            NAME,
            SORT_ORDER
        FROM CMN_CD
        WHERE GROUP_CODE = #{groupCode}
          AND IS_USED = TRUE
        ORDER BY SORT_ORDER ASC, NAME ASC
    </select>

    <select id="findAllUsedCodes" resultType="com.enjoy.common.domain.CmnCd">
        SELECT
            CODE,
            GROUP_CODE,
            NAME,
            SORT_ORDER
        FROM CMN_CD
        WHERE IS_USED = TRUE
        ORDER BY GROUP_CODE ASC, SORT_ORDER ASC, NAME ASC
    </select>

</mapper>